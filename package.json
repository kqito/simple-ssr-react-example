{
  "version": "1.0.0",
  "description": "My webpack project",
  "scripts": {
    "build": "npm-run-all -s clean && npm-run-all -p build:client build:server",
    "build:client": "webpack --config ./config/webpack.client.js",
    "build:server": "webpack --config ./config/webpack.server.js ",
    "clean": "rimraf ./dist",
    "format": "npm-run-all -s format:*",
    "format:fix": "prettier --write './src/**/*.{ts,tsx,js,json}'",
    "format:lint": "eslint ./src --ext .ts,.tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write",
      "jest",
      "git add"
    ]
  },
  "dependencies": {
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "@loadable/webpack-plugin": "^5.13.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "css-loader": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fork-ts-checker-webpack-plugin": "^5.0.12",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.8",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.0.9",
    "workbox-webpack-plugin": "^5.1.3"
  }
}
